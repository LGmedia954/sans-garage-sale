<h2>Add Listing</h2>

  <div class="sidebar">
    <a href="/listings">All Listings</a>
    <br><br>
    <a href="/categories">View Categories</a>
    <br><br>
    <a href="">My Listings</a>
    <br><br>
    <a href="/logout">Log Out</a>
  </div>

  <% if flash.has?(:input_error) %>
    <%= flash[:input_error] %>
  <% end %>

<br>
  <form method="POST" action="/items">
	<input type="text" name="item[name]" id="Name" placeholder="Item">
    <br><br>
    <input type="text" name="item[quantity]" placeholder="Quantity">
    <br><br>
    <input type="text" name="item[condition]" placeholder="Condition">
    <br><br>
	<input type="password" name="item[price]" placeholder="Price">
    <br><br>
    <h5>Please Select a Category:</h5>
    <br><br>
    <% Category.all.each do |c| %>
      <input id="<%= category.name %>" type="checkbox" name="categories[]" value="<%= category.id %>">
    <% end %>
    <br><br>
	<input type="submit" value="Create">
  </form>
<br>


