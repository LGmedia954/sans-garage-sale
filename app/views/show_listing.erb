<h2>View Your Listing, <%= current_user.name %></h2>

  <div class="sidebar">
    <a href="/listings">All Listings</a>
    <br><br>
    <a href="/categories">All Categories</a>
    <br><br>
    <a href="/my_listings">My Listings</a>
    <br><br>
    <a href="/logout">Log Out</a>
  </div>


   <% user.items.each do |item| %>
      <h3><a href="/items/<%= item.id %>"><%= item.name %></a></h3><br>
      <%= item.quantity %><br>
      <%= item.condition %><br>
      <%= item.price %><br><br>
   <% end %>

  <br><br>
  <br><br>

  
  <% if logged_in? %>
  <h3><a href="/item/:id/edit">Edit Listing</a></h3>
  <br><br>
  <br><br>
  <% if @item.user_id == @user.id %>
  <form method="POST" action="/items/<%= @item.id %>">
  <input type="hidden" id="hidden" name="_method" value="DELETE" />
  <input type="submit" value="Delete Listing"/>
  </form>
  <% end %>
  <br><br>
  <br><br>
  <h3><a href="/item/new">Add a New Listing</a></h3>
  <% end %>
  <br><br>
 

