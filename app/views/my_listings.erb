<h2><%= @current_user.name %>'s Current Listings</h2>

  <div class="sidebar">
    <a href="/listings">All Listings</a>
    <br><br>
    <a href="/categories">All Categories</a>
    <br><br>
    <a href="/items/new">Add Listing</a>
    <br><br>
    <a href="/logout">Log Out</a>
  </div>

  

<% @current_user.items.each do |item| %>
  <div>
    <a href="/items/<%= item.id %>/edit"><h6>Item Id# <%= item.id %></h6></a>
    <b><%= item.name %></b> (<%= item.quantity %>) ~ <%= item.condition %> condition. $<%= item.price %> USD.
    <br><br>
  </div>
<% end %>

