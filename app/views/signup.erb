<h2>Sign Up</h2>
  
  <% if flash.has?(:onboard_error) %>
    <%= flash[:onboard_error] %>
  <% end %>

<br><br>
  <form method="POST" action="/signup">
	  <label for="name">Name: <input type="text" name="name" id="Name" placeholder="Your name">
    <br><br>
    <label for="email">Email: <input type="text" name="email" id="Email" placeholder="Your email address">
    <br><br>
    <label for="phone">Phone: <input type="text" name="phone" id="Phone" placeholder="2125555555">
    <br><br>
	  <label for="password">Password: <input type="text" name="password" id="Password" placeholder="******">
    <br><br><br>
	  <input type="submit" value="Sign Up">
  </form>
<br>